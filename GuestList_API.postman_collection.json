            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "let data = {};",
                  "try { data = pm.response.json(); } catch(e) {}",
                  "if (data && data.accessToken) {",
                  "  pm.collectionVariables.set('accessToken', data.accessToken);",
                  "  pm.collectionVariables.set('refreshToken', data.refreshToken || '');",
                  "  pm.collectionVariables.set('userId', (data.user && data.user.id) ? data.user.id : '');",
                  "}",
                  "pm.test('HTTP 200', function () { pm.response.to.have.status(200); });"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "login"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"email\": \"{{adminEmail}}\", \"password\": \"{{adminPassword}}\"}"
            }
          }
        },
        {
          "name": "Refresh Access Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "let data = {};",
